{
  "name": "nightflux-core",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nightflux-core": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "generate:schema": "tsx src/domain/json-schema.ts > src/domain/nightflux-report.schema.json",
    "serve": "tsx src/serve.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18.18"
  },
  "packageManager": "npm@10.8.1",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "src/domain/nightflux-report.schema.json"
  ],
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "axios": "^1.11.0",
    "commander": "^12.1.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.6.1",
    "fastify": "^4.28.1",
    "proxy-agent": "^6.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.0"
  }
}
