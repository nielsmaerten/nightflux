{
  "name": "nightflux-core",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18.18"
  },
  "packageManager": "npm@10.8.1",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "dotenv": "^16.6.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "^4.1.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "proxy-agent": "^6.5.0"
  }
}
