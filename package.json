{
  "name": "@nielsmaerten/nightflux",
  "version": "1.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nightflux": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "node ./scripts/build.mjs",
    "clean": "rimraf dist",
    "cli": "tsx src/cli.ts",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "prepublishOnly": "npm run -s build",
    "prepack": "npm run build",
    "prepare": "npm run -s build",
    "serve": "tsx src/serve.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18.18"
  },
  "packageManager": "npm@11.6.2",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@fastify/static": "^8.0.0",
    "axios": "^1.11.0",
    "commander": "^14.0.0",
    "date-fns": "^4.0.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^17.0.0",
    "fastify": "^5.6.0",
    "proxy-agent": "^6.5.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.0"
  }
}
